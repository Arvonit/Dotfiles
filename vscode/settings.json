{
    "editor.fontSize": 14,
    "editor.suggestSelection": "first",
    "workbench.iconTheme": "vscode-icons",
    "terminal.integrated.fontSize": 15,
    "window.zoomLevel": 0,
    "editor.wordWrap": "on",
    "git.enableSmartCommit": true,
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    "workbench.colorCustomizations": {
        "[GitHub Dark]": {
            // Focused Color
            // "tab.activeBorderTop": "#0366d6",
            // "activityBar.activeBorder": "#005cc5",
            // "panelTitle.activeBorder": "#005cc5"

            // Lighter blue
            "tab.activeBorderTop": "#2188ff",
            "activityBar.activeBorder": "#2188ff",
            "panelTitle.activeBorder": "#2188ff",
            // "editorCursor.background": "#2188ff"
        },
        "[Dark++]": {
            "editorRuler.foreground": "#404040"
        }
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.fontFamily": "FiraCode-Retina, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "terminal.external.osxExec": "iTerm.app",
    "workbench.colorTheme": "Dark++",
    "editor.rulers": [100],
    "editor.cursorBlinking": "solid",
    "vim.vimrc.enable": true,
    "editor.minimap.enabled": false,
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.outDir": "%DIR%/out"
    // "terminal.integrated.fontWeight": "600"
}